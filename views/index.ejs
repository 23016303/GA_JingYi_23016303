<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Book App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Book App</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/addBook">Add new book</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>
  <div class="container">
    <br>
    <div class="text-center"><h2>Products from Book App Database</h2></div>
    <br>
  
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Book Name</th>
            <th width="100">Image</th>
            <th width="50">Synopsis</th>
            <th width="50">Rating</th>
            <th width="50">Edit</th>
            <th width="50">Delete</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < books.length; i++) { %>
          <tr>
            <td><a href="/book/<%= books[i].bookId %>"><%= books[i].bookName %></a></td>

            <td><img src="<%= books[i].image %>" style="width: 100px; height: 100 px;"/></td>
            <td><%= books[i].synopsis %></td>
            <td><%= books[i].rating.toFixed(2) %></td>

            <td><a href="/editBook/<%= books[i].bookId %>">Edit</a></td>
            <td><a href="/deleteBook/<%= books[i].bookId %>" onclick="return confirm('Are you sure you want to delete this book?')">Delete</a></td>
            
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
