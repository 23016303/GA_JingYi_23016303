<!-- product.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Book App</title>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Book App</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" href="/book">Add new book</a>
              </li> 
            </ul>
          </div>
        </div>
    </nav>
    
    <div class="container">
        <br>
        <div class="text-center"><h2>Book Details</h2></div>
        <br>
        <% if (book) { %> <!-- Check if product data exists -->
            <div>
                <p><b>Book Name:</b><br> <%= book.bookName %></p>
                <p><b>Book Image:</b><br> <img src = "<%= book.image %>" width="20%"></p>
                <p><b>Book Synopsis:</b><br> <%= book.synopsis %></p>
                <p><b>Rating:</b><br> <%= book.rating.toFixed(2) %></p> 
            </div>
        <% } else { %>
            <p>No book found.</p>
        <% } %>
        <a href ="/">Back</a>
    </div>
    
</body>
</html>
